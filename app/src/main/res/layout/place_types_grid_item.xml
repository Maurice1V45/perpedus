<com.perpedus.android.view.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/bu0_25"
    android:background="@drawable/place_type_selector">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/bu2"
            android:layout_height="@dimen/bu2"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bu0_25"
            android:layout_marginLeft="@dimen/bu0_25"
            android:layout_marginRight="@dimen/bu0_25"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="@color/grey_blue"
            android:textSize="@dimen/text_size_20px" />

    </LinearLayout>

</com.perpedus.android.view.SquareRelativeLayout>