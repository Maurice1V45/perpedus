<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyed">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false">

        <FrameLayout
            android:id="@+id/camera_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
            android:id="@+id/place_focus_view"
            layout="@layout/place_focus_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <RelativeLayout
            android:id="@+id/top_bar_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bu4"
            android:background="@color/white_80">

            <RelativeLayout
                android:id="@+id/top_settings_button"
                android:layout_width="@dimen/bu4"
                android:layout_height="@dimen/bu4"
                android:layout_alignParentRight="true"
                android:clickable="true">

                <ImageView
                    android:layout_width="@dimen/bu2"
                    android:layout_height="@dimen/bu2"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_settings" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/top_search_button"
                android:layout_width="@dimen/bu4"
                android:layout_height="@dimen/bu4"
                android:layout_toLeftOf="@+id/top_settings_button"
                android:clickable="true">

                <ImageView
                    android:layout_width="@dimen/bu2"
                    android:layout_height="@dimen/bu2"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_search" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/place_details_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bu10"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/bu2"
            android:layout_marginLeft="@dimen/bu5"
            android:layout_marginRight="@dimen/bu5"
            android:background="@drawable/red_bordered_white_rounded_shape"
            android:clickable="true"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/bu1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/place_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_size_36px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/place_types_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/bu1"
                    android:gravity="center"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_size_26px"
                    android:textStyle="italic" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/progress_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/semi_transparent_rounded_shape"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/bu2"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/progress" />

            <TextView
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bu1"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_30px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/no_landscape_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/black_transparent_rounded_shape"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/bu2"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_stadium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bu1"
                android:text="@string/no_landscape"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_30px" />

        </LinearLayout>
    </RelativeLayout>

    <com.perpedus.android.view.SearchDrawerLayout
        android:id="@+id/right_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right" />

</android.support.v4.widget.DrawerLayout>