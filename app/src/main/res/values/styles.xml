    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/grey_blue</item>
        <item name="android:textColorSecondary">@color/grey_blue</item>
        <item name="actionMenuTextColor">@color/grey_blue</item>
