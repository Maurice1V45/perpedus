<set xmlns:android="http://schemas.android.com/apk/res/android">

    <alpha
        android:duration="500"
        android:fromAlpha="0"
        android:interpolator="@android:interpolator/decelerate_cubic"
        android:toAlpha="1" />

    <scale
        android:duration="500"
        android:fromXScale="2"
        android:fromYScale="2"
        android:interpolator="@android:interpolator/decelerate_cubic"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1"
        android:toYScale="1" />

</set>